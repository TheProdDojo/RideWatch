{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "admin-app/**"
        ],
        "rewrites": [
            {
                "source": "/vendor/**",
                "destination": "/admin-app/dist/index.html"
            }
        ]
    }
}