{
  "buildCommand": "cd admin-app && npm install && npm run build",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/admin/:path*",
      "destination": "/admin-app/dist/:path*"
    },
    {
      "source": "/admin",
      "destination": "/admin-app/dist/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}